<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:foregroundTint="#8F1515"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Fragment.SignUpFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BF65b358"
        android:paddingHorizontal="30dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="262dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/logo_barangay" />

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/baloo_da"
            android:text="Welcome to Barangay North Signal E-Public Service  "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/baloo_da"
            android:text="Email"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayoutEmailSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />


        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/txtEmailSignUp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="271dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:hint="email@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="316dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/baloo_da"
            android:text="Password"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayoutPasswordSignUp"
            android:layout_width="278dp"
            android:layout_height="464dp"
            android:layout_marginBottom="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPasswordSignUp"
                android:layout_width="288dp"
                android:layout_height="37dp"
                android:layout_marginTop="345dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/ic_baseline_lock"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/baloo_da"
                android:hint="******"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="385dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/baloo_da"
            android:text="Confirm Password"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtConfirmSignUp"
            android:layout_width="288dp"
            android:layout_height="37dp"
            android:layout_marginTop="410dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_lock"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:hint="******"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#40A613"
            android:fontFamily="@font/baloo_da"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#F3F3F3" />

        <TextView
            android:id="@+id/txtSignIn"
            android:layout_width="78dp"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="83dp"
            android:fontFamily="@font/baloo_da"
            android:text="Sign in"
            android:textColor="#F3F3F3" />

        <TextView
            android:layout_width="229dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="106dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="83dp"
            android:fontFamily="@font/baloo_da"
            android:text="Already have account?"
            android:textColor="#F3F3F3" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayoutConfrimSignUp"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="30dp" />


    </RelativeLayout>


</RelativeLayout>