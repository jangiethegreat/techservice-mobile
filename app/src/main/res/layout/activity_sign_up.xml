<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:foregroundTint="#8F1515"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="381dp"
        android:layout_height="637dp"
        android:paddingHorizontal="30dp"
        android:background="#BF65b358">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/baloo_da"
            android:gravity="center_horizontal"
            android:text="Sign Up"
            android:textColor="#F3F3F3"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_da"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="95dp"
            android:layout_marginRight="16dp"
            android:text="Already registered?"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_da"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="95dp"
            android:layout_marginRight="16dp"
            android:shadowColor="@color/white"
            android:text="Login here"
            android:textStyle="bold" />

        <TextView
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/baloo_da"
            android:layout_marginEnd="-3dp"
            android:layout_marginRight="16dp"
            android:text="First Name"
            android:textColor="#F3F3F3"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etfname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/baloo_da"
            android:background="@drawable/input_bg"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="205dp"
            android:fontFamily="@font/baloo_da"
            android:layout_marginEnd="-3dp"
            android:text="Last Name"
            android:textColor="#F3F3F3"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etlname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="235dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/baloo_da"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="285dp"
            android:fontFamily="@font/baloo_da"
            android:layout_marginEnd="-3dp"
            android:layout_marginRight="16dp"
            android:text="Phone Number"
            android:textColor="#F3F3F3"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etphone"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="315dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_smartphone"
            android:inputType="textEmailAddress"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:hint="+63"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="365dp"
            android:fontFamily="@font/baloo_da"
            android:layout_marginEnd="-3dp"
            android:text="Email"
            android:textColor="#F3F3F3"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etemail"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="395dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:inputType="textEmailAddress"
            android:hint="email@gmail.com"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_da"
            android:layout_marginTop="445dp"
            android:layout_marginEnd="-3dp"
            android:text="Password"
            android:textColor="#F3F3F3"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etpassword"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="475dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/baloo_da"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_lock"
            android:drawablePadding="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="********"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#40A613"
            android:fontFamily="@font/baloo_da"
            android:text="Register"
            android:textAllCaps="false" />



    </RelativeLayout>



</RelativeLayout>